{
  "dependencies": {
    "@nestjs/mapped-types": "*",
    "tslib": "^2.8.1",
    "expo": "~52.0.47",
    "react": "18.3.1",
    "react-native": "0.76.9"
  },
  "name": "@lexilearner/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "LexiLearner monorepo - Language learning application with NestJS backend and React Native mobile app",
  "keywords": [
    "language-learning",
    "education",
    "react-native",
    "nestjs",
    "typescript",
    "monorepo"
  ],
  "workspaces": [
    "backend",
    "mobile"
  ],
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev:backend": "cd backend && pnpm run start:dev",
    "dev:mobile": "cd mobile && npx expo run:android",
    "dev:mobile-server": "cd mobile && pnpm start",
    "build": "npm-run-all build:*",
    "build:backend": "cd backend && pnpm run build",
    "build:mobile": "cd mobile && pnpm expo build",
    "test": "npm-run-all test:*",
    "test:backend": "cd backend && pnpm run test",
    "test:mobile": "cd mobile && pnpm test",
    "lint": "npm-run-all lint:*",
    "lint:backend": "cd backend && pnpm run lint",
    "lint:mobile": "cd mobile && pnpm run lint",
    "format": "npm-run-all format:*",
    "format:backend": "cd backend && pnpm run format",
    "clean": "npm-run-all clean:*",
    "clean:backend": "cd backend && rimraf dist node_modules",
    "clean:mobile": "cd mobile && rimraf node_modules .expo",
    "install:all": "pnpm install -r",
    "install:backend": "cd backend && pnpm install",
    "install:mobile": "cd mobile && pnpm install",
    "openapi:spec": "cd backend && npm run build && node ../scripts/generate-openapi-spec.js",
    "openapi:client": "node scripts/generate-client.js",
    "openapi:docs": "npm run openapi:spec && npm run openapi:client",
    "migration:compare": "node scripts/compare-apis.js",
    "migration:test": "npm run test && npm run migration:compare",
    "postinstall": "husky install",
    "prepare": "husky install",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-typescript-api": "^13.0.22"
  },
  "lint-staged": {
    "backend/**/*.{js,ts}": [
      "cd backend && npm run lint",
      "cd backend && npm run format"
    ],
    "mobile/**/*.{js,ts,tsx}": [
      "cd mobile && npm run lint"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lexilearner/lexilearner-monorepo"
  },
  "author": "LexiLearner Team",
  "license": "MIT",
  "readme": "README.md",
  "homepage": "https://github.com/lexilearner/lexilearner-monorepo#readme"
}
